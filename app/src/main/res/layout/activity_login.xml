<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#000"
tools:context=".Login">


<RelativeLayout
    android:id="@+id/RL_InfoGener"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Usuario"
        android:padding="10sp"
        android:layout_centerHorizontal="true"

        android:layout_above="@+id/edContrase単a"
        android:inputType="text"
        android:maxLength="10"

        android:background="#fff"
        tools:background="@android:color/background_light"/>

    <EditText
        android:id="@+id/edContrase単a"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Contrase単a"
        android:padding="10sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#fff"
        android:layout_marginTop="20dp"
        tools:background="@android:color/background_light"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/btIngreso"
        android:background="@drawable/ingresar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edContrase単a"
        android:layout_marginTop="20dp"/>

</RelativeLayout>

</FrameLayout>